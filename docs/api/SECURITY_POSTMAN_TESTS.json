{
  "info": {
    "name": "RentHub Security API",
    "description": "Complete security API testing collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Security Overview",
      "item": [
        {
          "name": "Get Security Overview",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/security/overview",
              "host": ["{{baseUrl}}"],
              "path": ["security", "overview"]
            }
          }
        },
        {
          "name": "Get Audit Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/security/audit-logs?event_type=authentication",
              "host": ["{{baseUrl}}"],
              "path": ["security", "audit-logs"],
              "query": [
                {
                  "key": "event_type",
                  "value": "authentication"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Two-Factor Authentication",
      "item": [
        {
          "name": "Get 2FA Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/security/2fa/status",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "status"]
            }
          }
        },
        {
          "name": "Enable 2FA (TOTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"method\": \"totp\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "enable"]
            }
          }
        },
        {
          "name": "Enable 2FA (SMS)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"method\": \"sms\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "enable"]
            }
          }
        },
        {
          "name": "Enable 2FA (Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"method\": \"email\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "enable"]
            }
          }
        },
        {
          "name": "Verify 2FA Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/verify",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "verify"]
            }
          }
        },
        {
          "name": "Send 2FA Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/security/2fa/send-code",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "send-code"]
            }
          }
        },
        {
          "name": "Disable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/disable",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "disable"]
            }
          }
        },
        {
          "name": "Regenerate Backup Codes",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/security/2fa/regenerate-backup-codes",
              "host": ["{{baseUrl}}"],
              "path": ["security", "2fa", "regenerate-backup-codes"]
            }
          }
        }
      ]
    },
    {
      "name": "Data Privacy (GDPR)",
      "item": [
        {
          "name": "Get Privacy Settings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/privacy/settings",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "settings"]
            }
          }
        },
        {
          "name": "Give GDPR Consent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"consent_text\": \"I agree to the processing of my personal data for the purposes of providing services.\",\n  \"purposes\": [\n    \"service_provision\",\n    \"communication\",\n    \"analytics\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/privacy/gdpr/consent",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "gdpr", "consent"]
            }
          }
        },
        {
          "name": "Withdraw GDPR Consent",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/privacy/gdpr/consent",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "gdpr", "consent"]
            }
          }
        },
        {
          "name": "Export User Data (JSON)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"format\": \"json\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/privacy/export",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "export"]
            }
          }
        },
        {
          "name": "Export User Data (CSV)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"format\": \"csv\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/privacy/export",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "export"]
            }
          }
        },
        {
          "name": "Request Data Deletion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categories\": [\"all\"],\n  \"reason\": \"No longer need the service\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/privacy/delete",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "delete"]
            }
          }
        },
        {
          "name": "Cancel Data Deletion",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/privacy/delete/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "delete", "cancel"]
            }
          }
        }
      ]
    },
    {
      "name": "Data Privacy (CCPA)",
      "item": [
        {
          "name": "CCPA Opt-Out of Sale",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/privacy/ccpa/opt-out",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "ccpa", "opt-out"]
            }
          }
        },
        {
          "name": "Request Data Disclosure",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/privacy/ccpa/disclosure",
              "host": ["{{baseUrl}}"],
              "path": ["privacy", "ccpa", "disclosure"]
            }
          }
        }
      ]
    },
    {
      "name": "Security Testing",
      "item": [
        {
          "name": "Test Rate Limiting",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/properties",
              "host": ["{{baseUrl}}"],
              "path": ["properties"]
            },
            "description": "Send multiple requests rapidly to test rate limiting"
          }
        },
        {
          "name": "Test XSS Protection",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"<script>alert('XSS')</script>Test Property\",\n  \"description\": \"Normal description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/properties",
              "host": ["{{baseUrl}}"],
              "path": ["properties"]
            },
            "description": "Test XSS protection by sending malicious script"
          }
        },
        {
          "name": "Test SQL Injection Protection",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/properties?search=1' OR '1'='1",
              "host": ["{{baseUrl}}"],
              "path": ["properties"],
              "query": [
                {
                  "key": "search",
                  "value": "1' OR '1'='1"
                }
              ]
            },
            "description": "Test SQL injection protection"
          }
        },
        {
          "name": "Test File Upload Security",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/upload",
              "host": ["{{baseUrl}}"],
              "path": ["upload"]
            },
            "description": "Test file upload with various file types"
          }
        }
      ]
    }
  ]
}
