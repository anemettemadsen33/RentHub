{
  "info": {
    "name": "RentHub Security API",
    "description": "Comprehensive security endpoints testing collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "OAuth 2.0",
      "item": [
        {
          "name": "Authorize",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": \"test_client_id\",\n  \"redirect_uri\": \"https://example.com/callback\",\n  \"response_type\": \"code\",\n  \"scope\": \"read write\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/authorize",
              "host": ["{{base_url}}"],
              "path": ["oauth", "authorize"]
            }
          }
        },
        {
          "name": "Get Token (Authorization Code)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grant_type\": \"authorization_code\",\n  \"code\": \"AUTHORIZATION_CODE\",\n  \"client_id\": \"test_client_id\",\n  \"client_secret\": \"test_client_secret\",\n  \"redirect_uri\": \"https://example.com/callback\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/token",
              "host": ["{{base_url}}"],
              "path": ["oauth", "token"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    pm.collectionVariables.set('refresh_token', response.refresh_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grant_type\": \"refresh_token\",\n  \"refresh_token\": \"{{refresh_token}}\",\n  \"client_id\": \"test_client_id\",\n  \"client_secret\": \"test_client_secret\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/token",
              "host": ["{{base_url}}"],
              "path": ["oauth", "token"]
            }
          }
        },
        {
          "name": "Revoke Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{access_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/revoke",
              "host": ["{{base_url}}"],
              "path": ["oauth", "revoke"]
            }
          }
        },
        {
          "name": "Introspect Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{access_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/introspect",
              "host": ["{{base_url}}"],
              "path": ["oauth", "introspect"]
            }
          }
        }
      ]
    },
    {
      "name": "API Keys",
      "item": [
        {
          "name": "List API Keys",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api-keys",
              "host": ["{{base_url}}"],
              "path": ["api-keys"]
            }
          }
        },
        {
          "name": "Generate API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test API Key\",\n  \"scopes\": [\"read\", \"write\"],\n  \"expires_in_days\": 90\n}"
            },
            "url": {
              "raw": "{{base_url}}/api-keys",
              "host": ["{{base_url}}"],
              "path": ["api-keys"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('api_key', response.data.key);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Revoke API Key",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api-keys/1",
              "host": ["{{base_url}}"],
              "path": ["api-keys", "1"]
            }
          }
        },
        {
          "name": "Rotate API Key",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api-keys/1/rotate",
              "host": ["{{base_url}}"],
              "path": ["api-keys", "1", "rotate"]
            }
          }
        }
      ]
    },
    {
      "name": "GDPR & Privacy",
      "item": [
        {
          "name": "Export User Data (JSON)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"format\": \"json\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/export",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "export"]
            }
          }
        },
        {
          "name": "Export User Data (CSV)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"format\": \"csv\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/export",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "export"]
            }
          }
        },
        {
          "name": "Request Data Deletion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"immediate\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/delete",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "delete"]
            }
          }
        },
        {
          "name": "Cancel Deletion Request",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/gdpr/cancel-deletion",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "cancel-deletion"]
            }
          }
        },
        {
          "name": "Get Consents",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/gdpr/consents",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "consents"]
            }
          }
        },
        {
          "name": "Grant Consent (Marketing)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"marketing\",\n  \"details\": {\n    \"email\": true,\n    \"sms\": false\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/consents",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "consents"]
            }
          }
        },
        {
          "name": "Grant Consent (Analytics)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"analytics\",\n  \"details\": {\n    \"tracking\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/consents",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "consents"]
            }
          }
        },
        {
          "name": "Revoke Consent",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"marketing\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/gdpr/consents",
              "host": ["{{base_url}}"],
              "path": ["gdpr", "consents"]
            }
          }
        }
      ]
    },
    {
      "name": "Security & Audit",
      "item": [
        {
          "name": "Get User Audit Trail (30 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/security/audit-trail?days=30",
              "host": ["{{base_url}}"],
              "path": ["security", "audit-trail"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Audit Trail (7 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/security/audit-trail?days=7",
              "host": ["{{base_url}}"],
              "path": ["security", "audit-trail"],
              "query": [
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        },
        {
          "name": "Get Security Incidents (24 hours)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/security/incidents?hours=24",
              "host": ["{{base_url}}"],
              "path": ["security", "incidents"],
              "query": [
                {
                  "key": "hours",
                  "value": "24"
                }
              ]
            }
          }
        },
        {
          "name": "Run Vulnerability Scan",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/security/scan",
              "host": ["{{base_url}}"],
              "path": ["security", "scan"]
            }
          }
        },
        {
          "name": "Get Security Report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/security/report",
              "host": ["{{base_url}}"],
              "path": ["security", "report"]
            }
          }
        }
      ]
    }
  ]
}
