{
  "dashboard": {
    "title": "RentHub Application Metrics",
    "tags": ["renthub", "laravel", "application"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "yaxes": [
          {"label": "Requests/sec", "format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}} p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}} p50"
          }
        ],
        "yaxes": [
          {"label": "Duration (s)", "format": "s"}
        ]
      },
      {
        "id": 3,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "100 * (cache_hits_total / (cache_hits_total + cache_misses_total))",
            "legendFormat": "Hit Rate %"
          }
        ]
      },
      {
        "id": 4,
        "title": "Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "{{queue}}"
          }
        ],
        "yaxes": [
          {"label": "Jobs", "format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Queue Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(queue_jobs_processed_total[5m])",
            "legendFormat": "Processed"
          },
          {
            "expr": "rate(queue_jobs_failed_total[5m])",
            "legendFormat": "Failed"
          }
        ],
        "yaxes": [
          {"label": "Jobs/sec", "format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Failed Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "queue_jobs_failed_total",
            "legendFormat": "Failed Jobs"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 10, "color": "yellow"},
          {"value": 100, "color": "red"}
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
