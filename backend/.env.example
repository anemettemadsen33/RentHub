# Exchange Rate API
EXCHANGE_RATE_API_KEY=

# Performance Monitoring
SENTRY_LARAVEL_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=
# Analytics ingest rate limits (per clientId per minute)
# Fallback combined limit (legacy):
ANALYTICS_EVENTS_RATE_LIMIT=120
# Default limit for most events (used when set, otherwise falls back to ANALYTICS_EVENTS_RATE_LIMIT)
ANALYTICS_EVENTS_RATE_LIMIT_DEFAULT=120
# Lower cap for high-volume pageview events
ANALYTICS_EVENTS_RATE_LIMIT_PAGEVIEW=60
