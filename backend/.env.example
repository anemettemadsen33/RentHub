# Payment Gateway (Stripe)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox

# WebSocket/Pusher Configuration
# Pusher Channels credentials (create a Channels app in your Pusher dashboard)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_SCHEME=https
PUSHER_HOST=
PUSHER_PORT=443

# Laravel Reverb (first-party WebSocket server) local defaults
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_APP_ID=renthub-local
REVERB_APP_KEY=renthub-key
REVERB_APP_SECRET=renthub-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http
