# API Configuration
# Local Development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:6001

# Production (uncomment and use these for production)
# NEXT_PUBLIC_API_URL=https://renthub-tbj7yxj7.on-forge.com/api
# NEXT_PUBLIC_API_BASE_URL=https://renthub-tbj7yxj7.on-forge.com/api/v1
# NEXT_PUBLIC_WEBSOCKET_URL=wss://renthub-tbj7yxj7.on-forge.com

# App Configuration
NEXT_PUBLIC_APP_NAME=RentHub
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Map Provider (optional): leaflet | mapbox
# Defaults to 'mapbox' when NEXT_PUBLIC_MAPBOX_TOKEN is set, otherwise 'leaflet'
NEXT_PUBLIC_MAP_PROVIDER=leaflet
NEXT_PUBLIC_MAP_CLUSTER_THRESHOLD=40

# Pusher Beams (Web Push) - client side Instance ID (DO NOT expose secret key here)
NEXT_PUBLIC_PUSHER_BEAMS_INSTANCE_ID=

# Pusher Channels (Laravel Echo)
# Get these from your Pusher Channels app (not Beams): Dashboard → Channels → Your App → App Keys
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=mt1

# Reverb (self-hosted) – when using Laravel Reverb instead of Pusher
NEXT_PUBLIC_USE_REVERB=true
NEXT_PUBLIC_REVERB_HOST=localhost
NEXT_PUBLIC_REVERB_PORT=8080
NEXT_PUBLIC_REVERB_SCHEME=ws
NEXT_PUBLIC_REVERB_KEY=renthub-key

# Google Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry Error Tracking
# Get your DSN from https://renthub.sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.2
NEXT_PUBLIC_SENTRY_PROFILES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.05
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Pageview Sampling (0.0 - 1.0, default 1.0 = 100%)
NEXT_PUBLIC_PAGEVIEW_SAMPLE_RATE=1.0
