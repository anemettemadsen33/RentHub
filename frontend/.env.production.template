# RentHub Frontend - Production Environment
# ====================================
# Deploy to Vercel: Configure these as Environment Variables
# https://vercel.com/madsens-projects/rent-hub/settings/environment-variables

# --- API Configuration ---
NEXT_PUBLIC_API_URL=https://renthub-tbj7yxj7.on-forge.com
NEXT_PUBLIC_API_BASE_URL=https://renthub-tbj7yxj7.on-forge.com/api/v1
NEXT_PUBLIC_WEBSOCKET_URL=wss://renthub-tbj7yxj7.on-forge.com

# --- App Configuration ---
NEXT_PUBLIC_APP_NAME=RentHub
NEXT_PUBLIC_APP_URL=https://renthub.international
NEXT_PUBLIC_SITE_URL=https://renthub.international

# --- Map Provider ---
NEXT_PUBLIC_MAP_PROVIDER=mapbox
NEXT_PUBLIC_MAP_CLUSTER_THRESHOLD=40
NEXT_PUBLIC_MAPBOX_TOKEN=pk.PRODUCTION_MAPBOX_TOKEN_HERE
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=PRODUCTION_GOOGLE_MAPS_API_KEY

# --- Real-time (Laravel Reverb) ---
NEXT_PUBLIC_USE_REVERB=true
NEXT_PUBLIC_REVERB_HOST=renthub-tbj7yxj7.on-forge.com
NEXT_PUBLIC_REVERB_PORT=443
NEXT_PUBLIC_REVERB_SCHEME=wss
NEXT_PUBLIC_REVERB_KEY=MATCH_BACKEND_REVERB_APP_KEY

# --- Pusher (Alternative) ---
NEXT_PUBLIC_PUSHER_KEY=PRODUCTION_PUSHER_KEY
NEXT_PUBLIC_PUSHER_CLUSTER=mt1

# --- Pusher Beams (Web Push Notifications) ---
NEXT_PUBLIC_PUSHER_BEAMS_INSTANCE_ID=PRODUCTION_INSTANCE_ID

# --- Analytics ---
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PAGEVIEW_SAMPLE_RATE=1.0

# --- Error Monitoring (Sentry) ---
NEXT_PUBLIC_SENTRY_DSN=https://PUBLIC_KEY@o123456.ingest.sentry.io/PROJECT_ID
SENTRY_DSN=https://PUBLIC_KEY@o123456.ingest.sentry.io/PROJECT_ID
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.2
NEXT_PUBLIC_SENTRY_PROFILES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.05
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# --- Stripe (Client-side) ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_PRODUCTION_PUBLISHABLE_KEY

# --- Feature Flags ---
NEXT_PUBLIC_FEATURE_PAYMENTS=true
NEXT_PUBLIC_FEATURE_MESSAGING=true
NEXT_PUBLIC_FEATURE_REVIEWS=true
NEXT_PUBLIC_FEATURE_BOOKING=true

# --- Build Configuration ---
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

