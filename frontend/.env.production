# ===================================
# Push Notifications
# ===================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# ===================================
# Analytics & Monitoring
# ===================================

# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=renthub-frontend
SENTRY_AUTH_TOKEN=your-auth-token

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# ===================================
# Feature Flags
# ===================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ===================================
# Image Optimization
# ===================================
NEXT_PUBLIC_IMAGE_DOMAINS=yourdomain.com,s3.amazonaws.com
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# ===================================
# Localization
# ===================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_AVAILABLE_LOCALES=en,ro,fr,de,es

# ===================================
# Rate Limiting
# ===================================
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_WINDOW=60000

# ===================================
# Security
# ===================================
NEXT_PUBLIC_CSP_REPORT_URI=https://yourdomain.com/api/csp-report
ENCRYPTION_KEY=generate-32-char-random-string

# ===================================
# Build Configuration
# ===================================
ANALYZE=false
BUNDLE_ANALYZE=false
SKIP_ENV_VALIDATION=false

# ===================================
# Email Configuration (for contact forms)
# ===================================
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
